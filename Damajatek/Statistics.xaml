<Window x:Class="Damajatek.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Damajatek"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="800" Background="Beige" ResizeMode="CanResizeWithGrip" >
    <Grid>
        <Label Content="Statictics" HorizontalAlignment="Center" FontSize="28" FontWeight="Bold" />
        <Label Margin="45" BorderBrush="Black" BorderThickness="2" />
        <TextBlock x:Name="statistics_label" Margin="50" TextWrapping="Wrap" FontSize="14" LineHeight="24" />
    </Grid>

</Window>
